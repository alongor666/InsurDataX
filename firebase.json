
{
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      ".next/",
      "out/",
      "functions/",
      ".vscode/",
      ".github/",
      "README.md",
      "ISSUE*.md",
      "PRODUCT*.md",
      "FIELD*.md"
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
