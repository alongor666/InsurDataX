
{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".", // Base URL is the 'functions' directory
    // "paths" alias that reached outside is removed to ensure self-contained function code.
    // If you had internal aliases within 'functions/src', they would go here.
    // e.g., "@local_utils/*": ["src/utils/*"]
  },
  "compileOnSave": true,
  "include": [
    "src" // Includes everything in 'functions/src'
  ]
}
